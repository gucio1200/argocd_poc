{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>gucio1200/renovate-config"
  ],
  "flux": {
    "fileMatch": ["(k8s|lb)/.+\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["(k8s|lb)/.+\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": ["(k8s|lb)/.+\\.ya?ml$"]
  },
  "packageRules": [
    {
      "description": "Per cluster PR's",
      "matchFileNames": ["**/int/eastus2/**"],
      "addLabels": ["{{{ replace 'r"(?<=overlays/)([^/]+/[^/]+)"' '$1' packageFileDir}}}"]
    }
  ]
}

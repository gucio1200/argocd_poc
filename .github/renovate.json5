{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>gucio1200/renovate-config"
  ],
  "flux": {
    "fileMatch": ["(k8s|lb)/.+\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["(k8s|lb)/.+\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": ["(k8s|lb)/.+\\.ya?ml$"]
  },
  "packageRules": [
    {
      "matchFileNames": ["**/overlays/**"],
      "additionalBranchPrefix": "{{ replace '.*overlays/([^/]+/[^/]+/[^/]+)$' '$1' packageFileDir }}/",
      "commitMessageSuffix": " - {{ replace '.*overlays/([^/]+/[^/]+/[^/]+)$' '$1' packageFileDir }}",
      "addLabels": ["{{ lookup (split (replace '.*overlays/([^/]+/[^/]+/[^/]+)$' '$1' packageFileDir) '/') 0 }}","{{ lookup (split (replace '.*overlays/([^/]+/[^/]+/[^/]+)$' '$1' packageFileDir) '/') 1 }}","{{ lookup (split (replace '.*overlays/([^/]+/[^/]+/[^/]+)$' '$1' packageFileDir) '/') 2 }}"]
    }
  ]
}


{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>gucio1200/renovate-config"
  ],
  "flux": {
    "fileMatch": ["(k8s|lb)/.+\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["(k8s|lb)/.+\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": ["(k8s|lb)/.+\\.ya?ml$"]
  },
  "packageRules": [
    {
      "groupName": "int/eastus2"
      "matchFileNames": [**/{{{groupName}}}/**],
      "addLabels": ["{{{groupName}}}"]
    }
  ]
}

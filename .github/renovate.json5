{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>gucio1200/renovate-config"
  ],
  "flux": {
    "fileMatch": ["(k8s|lb)/.+\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["(k8s|lb)/.+\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": ["(k8s|lb)/.+\\.ya?ml$"]
  },
  "packageRules": [
    {
      "groupName": "int/eastus2",
      "matchFileNames": ["**/int/eastus2/**"],
      "addLabels": ["{{{ replace '.*overlays/([^/]+/[^/]+)$' '$1' packageFileDir}}}"],
      "additionalBranchPrefix": "{{{packageName}}}-{{{packageVersion}}}-"
    },
    {
      "groupName": "int/france",
      "matchFileNames": ["**/int/france/**"],
      "addLabels": ["{{{ replace '.*overlays/([^/]+/[^/]+)$' '$1' packageFileDir}}}"],
      "additionalBranchPrefix": "{{{packageName}}}-{{{packageVersion}}}-"
    }
  ]
}


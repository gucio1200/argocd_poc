{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>gucio1200/renovate-config"
  ],
  "flux": {
    "fileMatch": ["(k8s|lb)/.+\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["(k8s|lb)/.+\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": ["(k8s|lb)/.+\\.ya?ml$"]
  },
  "packageRules": [
    {
      "description": "Per cluster PR's",
      "groupName": "{{{ replace '/overlays/([^/]+/[^/]+)' '$1' packageFileDir}}}",
      "baseBranches": ["main"],
      "matchFileNames": ["**/int/eastus2/**"],
      "addLabels": ["{{{ replace '/overlays/([^/]+/[^/]+)' '$1' packageFileDir}}}"],
      "group": {
        "commitMessageTopic": "{{{ replace '/overlays/([^/]+/[^/]+)' '$1' packageFileDir}}} group"
      },
      "additionalBranchPrefix": "{{{ replace '/overlays/([^/]+/[^/]+)' '$1' packageFileDir}}}-"
    }
  ]
}
